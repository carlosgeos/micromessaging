{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "allowJs": false,
    "lib": [
      "es7"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "typings-tests",
    "node_modules",
    "dist"
  ]
}
